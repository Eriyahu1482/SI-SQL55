<Window x:Class="SI_SQL55.View.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SI_SQL55.View.Windows"
        Width="550"
        Height="350"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        mc:Ignorable="d">
    <Border
        BorderBrush="Black"
        BorderThickness="2"
        CornerRadius="15">
        <Grid>
            <Border
                Width="550"
                Height="350"
                Background="Red"
                CornerRadius="15"
                Opacity="0.5" />
            <TextBlock Text="ERROR" Style="{StaticResource SingUp}" FontSize="40" HorizontalAlignment="Center" Margin="0 20 0 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Height="50" Margin="0 100 0 0">
                <Button
                    x:Name="Close"
                    Click="Close_Click"
                    Content="Close"
                    Style="{StaticResource BtnMain}"
                    Margin="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
